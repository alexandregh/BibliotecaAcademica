@model BibliotecaAcademica.Web.Models.Alunos.ViewModelLogarAluno
@{
    ViewBag.Title = "Biblioteca Acadêmica Online - Alunos";
    Layout = "~/Shared/_Layout.cshtml";
}

<article class="col-md-6 offset-3 telaLogin">
    <h3 class="tituloH3">Sistema de Biblioteca Online</h3>
    <h6 class="tituloH6">Login de Alunos</h6>
    <article>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" required="required" placeholder="Email do Aluno..." tabindex="1" alt="Email do Aluno" title="Email do Aluno" name="email" id="email" class="form-control" />
            <label for="codigo">Código</label>
            <input type="password" required="required" placeholder="Código do Aluno..." tabindex="5" alt="Código do Aluno" title="Código do Aluno" name="codigo" id="codigo" class="form-control" />
        </div>
        <div class="row">
            <div class="col-md-4">
                <button tabindex="10" alt="Entrar" id="btnEntrar" name="entrar" class="btn btn-success">Entrar</button>
            </div>
            <div class="col-md-3">
                <button tabindex="15" alt="Esqueci meu Código" id="esquecicodigo" name="esquecicodigo" class="btn btn-secondary">Esqueci o Código</button>
            </div>
            <div class="col-md-3">
                <button tabindex="20" alt="Novo Usuário" name="novousuario" id="novousuario" class="btn btn-secondary">Novo Usuário</button>
            </div>
            <div class="col-md-2">
                <button tabindex="25" alt="Voltar" name="voltar" id="voltar" class="btn btn-primary btn-group-sm">Voltar</button>
            </div>
        </div>
    </article>
</article>